if [ `id -u` -eq 0 ]; then
	echo "You must not launch gajim-remote as root, it is INSECURE"
fi

cd PREFIX/share/gajim/src
export PYTHONPATH="$PYTHONPATH:PREFIXLIB/gajim"
exec python -OOt gajim-remote.py "$@"
